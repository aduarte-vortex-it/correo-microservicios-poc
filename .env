# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Database Configuration (Aurora RDS)
DB_URL=jdbc:postgresql://your-aurora-cluster.region.rds.amazonaws.com:5432/correodb
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Cognito Configuration
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id

# SQS Configuration
SQS_QUEUE_URL=https://sqs.region.amazonaws.com/your-account-id/your-queue-name

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:region:account-id:your-topic-name

# Service Ports
USER_SERVICE_PORT=8081
SHIPPING_SERVICE_PORT=8082

# Environment
NODE_ENV=development 